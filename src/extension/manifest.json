{
  "manifest_version": 3,
  "name": "Grooper",
  "version": "0.1.0",
  "description": "Rule-based tab grouping.",
  "permissions": ["tabs", "tabGroups", "storage", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "commands": {
    "move-next-group": {
      "description": "Move tab to next group"
    },
    "move-prev-group": {
      "description": "Move tab to previous group"
    },
    "ungroup": {
      "description": "Ungroup tab"
    },
    "move-to-group-1": {
      "description": "Move tab to group slot 1"
    },
    "move-to-group-2": {
      "description": "Move tab to group slot 2"
    },
    "move-to-group-3": {
      "description": "Move tab to group slot 3"
    }
  }
}
