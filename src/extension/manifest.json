{
  "manifest_version": 3,
  "name": "Grooper",
  "short_name": "Grooper",
  "version": "0.1.0",
  "description": "Rule-based tab grouping for Chrome.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["tabs", "tabGroups", "storage", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Grooper â€” Rule-based tab grouping",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "commands": {
    "move-next-group": {
      "description": "Move tab to next group"
    },
    "move-prev-group": {
      "description": "Move tab to previous group"
    },
    "ungroup": {
      "description": "Ungroup tab"
    },
    "move-to-group-1": {
      "description": "Move tab to group slot 1"
    },
    "move-to-group-2": {
      "description": "Move tab to group slot 2"
    },
    "move-to-group-3": {
      "description": "Move tab to group slot 3"
    }
  }
}
